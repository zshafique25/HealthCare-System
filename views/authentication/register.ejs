                    <!--Gender-->
                    <p>Gender</p>
                    <!--Male-->
                    <input type="radio" id="male" name="gender" value="Male" required>
                    <label for="male">Male</label>
                    <!--Female-->
                    <input type="radio" id="female" name="gender" value="Female" required>
                    <label for="female">Female</label>
                    <!--Other-->
                    <input type="radio" id="other" name="gender" value="Other" required>
                    <label for="other">Other</label><br>
                    <!--Password-->
                    <p>Password</p>
                    <input type="password" id="password" name="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" 
                    required><br>
                    <p>Account Type</p>
                    <select class="select" name="accounttype" id="Account">
                        <option disabled selected>Account Type</option>
                        <option value="patient">Patient</option>
                        <option value="doctor">Doctor</option>
                        <option value="hospitalManager">Hospital Manager</option>
                        <option value="admin">Admin</option>
                        <option value="pharmacist">Pharmacist</option>
                    </select>
                    <p>Specialization</p>
                    <select class="Select" id="specialization" name="specialization" required>
                        <option selected value="none">None</option>
                        <option value="cardiologiy">Cardiologist</option>
                        <option value="optics">Optics</option>
                        <option value="medicine">Medicine</option>   
                    </select><br>
                    <p>Hospital/Clicic</p>
                    <select class="Select" id="hospital" name="hospital" required>
                        <option selected value="none">None</option>
                        <% hospitals.forEach(function(hospital){ %>
                        <option value="<%=hospital.name %>"><%=hospital.name %></option>  
                        <%});%>
                    </select><br><br>
                    <!--Submit button-->
                    <input type="submit" class="button" value="Create Account"> 
                </form>
                <a href="/HCS/login">Already have an account?</a>
</body>
</html>