<%-include("../partials/header")%>


<!--Start Patient Info-->
<link rel="stylesheet" href="/hospital info.css">
<section class="hospitalinfo">
    <div class="container">
        <h1>Hospital Info</h1>
        <div class="box">
            <div class="hospital">
                <table>
                    <tr>
                        <th>Hospital Name:</th>
                        <td><%=hospital.name%></td>
                    </tr>
                    <tr>
                        <th>City:</th>
                        <td><%=hospital.city%></td>
                    </tr>
                    <tr>
                        <th>Address:</th>
                        <td><%=hospital.address%></td>
                    </tr>
                    <tr>
                        <th>Contact:</th>
                        <td><%=hospital.contact%></td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td><%=hospital.email%></td>
                    </tr>
                </table>
            </div>
            <div class="doctors">
                <h3>Doctors List:</h3>
                <table style="border: 1px solid black;">
                    <tr style="background-color: rgb(0, 102, 255);">
                        <th>Doctor Name</th>
                        <th>Specialization</th>
                        <th>Gender</th>
                        <th>Email</th>
                    </tr>
                    <%hospital.doctors.forEach(function(doctor){%>
                    <tr>
                        <td><%=doctor.name%></td>
                        <td><%=doctor.specialization%></td>
                        <td><%=doctor.gender%></td>
                        <td><%=doctor.email%></td>
                    </tr>
                    <%});%>
                </table>
            </div>
        </div>

    </div>
</section>
<!--End Patient More Info-->

<%-include("../partials/footer")%>